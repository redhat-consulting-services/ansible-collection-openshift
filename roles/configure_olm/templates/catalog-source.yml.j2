---
apiVersion: operators.coreos.com/v1alpha1
kind: CatalogSource
metadata:
  name: "{{ catalogsource.name | default('redhat-operators') }}"
  namespace: "{{ olm.marketplace_namespace | default('openshift-marketplace') }}"
spec:
  sourceType: grpc
  image: "{{ registry.url }}/{{ registry.repository }}/{{ registry.index }}:{{ catalog_source.ocp_version }}"
  updateStrategy:
    registryPoll:
      interval: 15m
